    <style name="Theme.SocialPolling" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toolcolor</item>
        <item name="colorPrimaryVariant">@color/toolcolor</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/toolcolor</item>
        <item name="colorSecondaryVariant">@color/toolcolor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="cursorColor">@color/toolcolor</item>
        <item name="android:cursorVisible">true</item>
